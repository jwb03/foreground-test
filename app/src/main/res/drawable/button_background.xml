<!-- res/drawable/button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 버튼을 눌렀을 때 상태 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000"/> <!-- 눌렀을 때 배경색 (빨간색) -->
            <corners android:radius="16dp"/> <!-- 둥근 모서리 -->
        </shape>
    </item>

    <!-- 기본 상태 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#008CBA"/> <!-- 기본 배경색 (파란색) -->
            <corners android:radius="16dp"/> <!-- 둥근 모서리 -->
            <stroke
                android:width="2dp"
                android:color="#000000"/> <!-- 테두리 색상과 두께 -->
        </shape>
    </item>
</selector>
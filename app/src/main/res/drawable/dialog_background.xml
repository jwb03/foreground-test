<!-- res/drawable/dialog_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 다이얼로그 배경 색상 -->
    <solid android:color="#FFFFFF" /> <!-- 배경색을 연한 아이보리 색으로 설정 -->

    <!-- 테두리 설정 -->
    <stroke
        android:width="2dp"
        android:color="#FF8A80" />

    <!-- 모서리 둥글게 설정 -->
    <corners android:radius="12dp" /> <!-- 모서리를 12dp 반경으로 둥글게 설정 -->
</shape>

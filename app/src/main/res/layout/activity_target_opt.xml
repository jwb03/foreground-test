<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/option_controller">

    <TextView
        android:id="@+id/head_text"
        style="@style/setting_head_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:text="@string/companion_allowed_list"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/nav_line"
        android:layout_width="409dp"
        android:layout_height="2dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/login_view_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/back"
        android:layout_width="75dp"
        android:layout_height="75dp"

        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option_body1"
        app:layout_constraintTop_toBottomOf="@id/nav_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        android:layout_width="340dp"
        android:layout_height="80dp">

        <View
            android:id="@+id/body_frame1"
            style="@style/common_text"
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_marginTop="78dp"
            android:background="@drawable/login_view_line"
            android:text="@string/imp_alert_save"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/body_text1"
            style="@style/common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/imp_alert_save"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ToggleButton
            android:id="@+id/body_toggle1"
            style="@style/common_text"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginStart="235dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="22dp"
            android:textAlignment="center"
            android:textOff="@string/off"
            android:textOn="@string/on"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option_body2"
        app:layout_constraintTop_toBottomOf="@id/option_body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="0dp"
        android:layout_width="340dp"
        android:layout_height="80dp">

        <View
            android:id="@+id/body_frame2"
            style="@style/common_text"
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_marginTop="78dp"
            android:background="@drawable/login_view_line"
            android:text="@string/opt_vibe"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/body_text2"
            style="@style/common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opt_vibe"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ToggleButton
            android:id="@+id/body_toggle2"
            android:layout_width="90dp"
            android:layout_height="50dp"
            style="@style/common_text"

            android:textOff="@string/off"
            android:textOn="@string/on"
            android:textSize="20sp"
            android:layout_marginStart="235dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option_body3"
        app:layout_constraintTop_toBottomOf="@id/option_body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="340dp"
        android:layout_height="80dp">

        <View
            android:id="@+id/body_frame3"
            style="@style/common_text"
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_marginTop="78dp"
            android:background="@drawable/login_view_line"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/body_text3"
            style="@style/common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opt_volume"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ToggleButton
            android:id="@+id/body_toggle3"
            android:layout_width="90dp"
            android:layout_height="50dp"
            style="@style/common_text"

            android:textOff="@string/off"
            android:textOn="@string/on"
            android:textSize="20sp"
            android:layout_marginStart="235dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option_body4"
        app:layout_constraintTop_toBottomOf="@id/option_body3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="340dp"
        android:layout_height="80dp">

        <View
            android:id="@+id/body_frame4"
            style="@style/common_text"
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_marginTop="78dp"
            android:background="@drawable/login_view_line"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/body_text4"
            style="@style/common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opt_light"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ToggleButton
            android:id="@+id/body_toggle4"
            android:layout_width="90dp"
            android:layout_height="50dp"
            style="@style/common_text"

            android:textOff="@string/off"
            android:textOn="@string/on"
            android:textSize="20sp"
            android:layout_marginStart="235dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option_body5"
        app:layout_constraintTop_toBottomOf="@id/option_body4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="340dp"
        android:layout_height="80dp">

        <View
            android:id="@+id/body_frame5"
            style="@style/common_text"
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_marginTop="78dp"
            android:background="@drawable/login_view_line"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/body_text5"
            style="@style/common_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opt_alarm"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ToggleButton
            android:id="@+id/body_toggle5"
            android:layout_width="90dp"
            android:layout_height="50dp"
            style="@style/common_text"

            android:textOff="@string/off"
            android:textOn="@string/on"
            android:textSize="20sp"
            android:layout_marginStart="235dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
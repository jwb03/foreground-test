<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/option_target"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screen.setting.FragmentControllerOpt"
    android:background="#FFFFF2">

    <TextView
        android:id="@+id/head_text"
        style="@style/app_one_line_text"
        android:textSize="40sp"
        android:autoSizeMaxTextSize="40sp"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/companion_allowed_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/nav_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_view_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/head_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/nav_line">

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/guide_toggle_off"
            android:checked="false"
            android:enabled="false"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="60dp"
            android:scaleX="1.0"
            android:scaleY="1.0"
            app:thumbTint="#FE7363"
            app:trackTint="#FDF6CC"/>

        <TextView
            android:id="@+id/guide_text_off"
            style="@style/app_one_line_text"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:autoSizeMaxTextSize="20sp"
            android:text="@string/guide_text_off"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/nav_line">

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/guide_toggle_on"
            android:checked="true"
            android:enabled="false"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="200dp"
            android:scaleX="1.0"
            android:scaleY="1.0"
            app:thumbTint="#FE7363"
            app:trackTint="#FDF6CC"/>

        <TextView
            android:id="@+id/guide_text_on"
            style="@style/app_one_line_text"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:autoSizeMaxTextSize="20sp"
            android:text="@string/guide_text_on"
            android:textSize="20sp" />

    </LinearLayout>

    <View
        android:id="@+id/back"
        android:layout_width="75dp"
        android:layout_height="75dp"

        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option_body1"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nav_line">

        <View
            android:id="@+id/body_frame1"
            style="@style/common_text"
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_marginTop="78dp"
            android:background="@drawable/login_view_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/body_text1"
            style="@style/app_one_line_text"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:autoSizeMaxTextSize="24sp"
            android:text="@string/imp_alert_save"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/body_toggle1"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="22dp"
            android:scaleX="1.3"
            android:scaleY="1.2"
            app:thumbTint="#FE7363"
            app:trackTint="#FDF6CC"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="44dp"
            app:layout_constraintStart_toEndOf="@id/body_text1"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option_body2"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/option_body1">

        <View
            android:id="@+id/body_frame2"
            style="@style/common_text"
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_marginTop="78dp"
            android:background="@drawable/login_view_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/body_text2"
            style="@style/app_one_line_text"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:autoSizeMaxTextSize="24sp"
            android:text="@string/opt_vibe"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/body_toggle2"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="22dp"
            android:scaleX="1.3"
            android:scaleY="1.2"
            app:thumbTint="#FE7363"
            app:trackTint="#FDF6CC"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="44dp"
            app:layout_constraintStart_toEndOf="@id/body_text2"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option_body3"
        android:layout_width="340dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/option_body2">

        <View
            android:id="@+id/body_frame3"
            style="@style/common_text"
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_marginTop="78dp"
            android:background="@drawable/login_view_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/body_text3"
            style="@style/app_one_line_text"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:autoSizeMaxTextSize="24sp"
            android:text="@string/opt_volume"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/body_toggle3"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="22dp"
            android:scaleX="1.3"
            android:scaleY="1.2"
            app:thumbTint="#FE7363"
            app:trackTint="#FDF6CC"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="44dp"
            app:layout_constraintStart_toEndOf="@id/body_text3"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option_body4"
        android:layout_width="340dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/option_body3">

        <View
            android:id="@+id/body_frame4"
            style="@style/common_text"
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_marginTop="78dp"
            android:background="@drawable/login_view_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/body_text4"
            style="@style/app_one_line_text"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:autoSizeMaxTextSize="24sp"
            android:text="@string/opt_light"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/body_toggle4"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="22dp"
            android:scaleX="1.3"
            android:scaleY="1.2"
            app:thumbTint="#FE7363"
            app:trackTint="#FDF6CC"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="44dp"
            app:layout_constraintStart_toEndOf="@id/body_text4"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/option_body5"
        android:layout_width="340dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/option_body4">

        <View
            android:id="@+id/body_frame5"
            style="@style/common_text"
            android:layout_width="340dp"
            android:layout_height="2dp"
            android:layout_marginTop="78dp"
            android:background="@drawable/login_view_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/body_text5"
            style="@style/app_one_line_text"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:autoSizeMaxTextSize="24sp"
            android:text="@string/opt_alarm"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/body_toggle5"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="22dp"
            android:scaleX="1.3"
            android:scaleY="1.2"
            app:thumbTint="#FE7363"
            app:trackTint="#FDF6CC"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="44dp"
            app:layout_constraintStart_toEndOf="@id/body_text5"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>